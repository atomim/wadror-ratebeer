<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @beer.name %>
</p>

<p>
  <b>Style:</b>
  <%= @beer.style %>
</p>

<p>
  <b>Brewery:</b>
  <%= @beer.brewery_id %>
</p>

<p>
<% if @beer.ratings.empty? %>
 beer has not yet been rated!
<% else %>
 beer has <%= pluralize(@beer.ratings.count,"rating")%>, average <%= @beer.average_rating %>
<% end %>
</p>

<h4>give a rating:</h4>

<%= form_for(@rating) do |f| %>
  <%= f.hidden_field :beer_id %>
  score: <%= f.number_field :score %>
  <%= f.submit :class => "btn btn-primary" %>
<% end %>

<p></p>

<%= link_to 'Edit', edit_beer_path(@beer), :class => "btn btn-primary" %>
<%= (link_to 'Destroy', @beer, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger") if current_user %>